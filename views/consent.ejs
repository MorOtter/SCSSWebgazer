<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/style.css" rel="stylesheet">
    
    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="icon" href="/public/assets/favicon.webp" type="image/x-icon">
    <title>Security Control Simulation System</title>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="custom-navbar">
        <div class="navbar-logo">
            <a>SCSS</a>
        </div>
    </nav>
    
    <section class="info">
        <h1>Consent Form</h1>
        <h2><strong>Name of Chief / Principal Investigator:</strong> Mordecai Otter</h2>

        <!-- Consent Form -->
        <form id="consent-form" action="next-page-url.html" method="post">
            <p>I confirm that I have read the information sheet and understand that my participation in this project will require approximately 30 minutes of my time...</p>
            
            <!-- Consent Checkboxes -->
            <div class="consent">
                <div class="d-flex w-100 justify-content-between border border-2 border-warning mb-2">
                    <input type="checkbox" class="form-check-input" id="consent-checkbox-1" name="consent-checkbox-1">
                    <label for="consent-checkbox-1" class="form-check-label">
                        I consent to participate in the study conducted by Mordecai Otter of Psychology, Cardiff University.
                    </label>
                </div>

                <div class="d-flex w-100 justify-content-between border border-2 border-warning mb-2">
                    <input type="checkbox" class="form-check-input" id="consent-checkbox-2" name="consent-checkbox-2">
                    <label for="consent-checkbox-2" class="form-check-label">
                        I confirm that I have read the information sheet on the previous page.
                    </label>
                </div>

                <!-- Add remaining checkboxes as needed -->

                <div class="d-flex w-100 justify-content-between border border-2 border-warning mb-2">
                    <input type="checkbox" class="form-check-input" id="consent-checkbox-10" name="consent-checkbox-10">
                    <label for="consent-checkbox-10" class="form-check-label">
                        I agree to take part in this research project.
                    </label>
                </div>
            </div>

            <!-- Confirmation Button -->
            <button class="btn btn-primary" id="proceedToLogin" type="submit">Confirm</button>
        </form>
    </section>

    <!-- JavaScript -->
    <script>
        document.getElementById("proceedToLogin").addEventListener("click", (event) => {
            let allChecked = true;

            // Check if all checkboxes are checked
            document.querySelectorAll('.form-check-input').forEach((checkbox) => {
                if (!checkbox.checked) {
                    checkbox.parentElement.classList.add("border-danger");
                    allChecked = false;
                } else {
                    checkbox.parentElement.classList.remove("border-danger");
                }
            });

            // If not all checkboxes are checked, prevent form submission
            if (!allChecked) {
                event.preventDefault();
                alert("Please check all the boxes to proceed.");
            }
        });
    </script>
</body>
</html>
