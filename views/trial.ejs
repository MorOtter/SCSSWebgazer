                </div>
            </section>
        </aside>

        <!-- Middle Panel -->
        <section id="game">
            <img draggable="false" src="../public/assets/radarLines.png">
        </section>

        <!-- Right Panel (Recommendations) -->
        <aside id="recommendations">
            <div class="h-50 d-flex flex-column justify-content-center">
